<div class="w-full h-full min-h-screen-without-navbar py-4">
  <%= link_to((request.referer.present? ? request.referer : root_path),
              class: 'flex text-gray-700') do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span>Back</span>
  <% end %>

  <h3 class="mt-4 font-bold text-center">
    <%= "Give a hug in recognition of #{@user.profile.first_name.capitalize}" %>
  </h3>

  <%= form_with(url: new_user_hug_path(@user), method: :get, scope: :hug, class: '') do |f| %>
    <div class="w-full mt-6 max-w-xl lg:max-w-2xl mx-auto">
      <%= react_component("inputHugsAnimation") %>
    </div>
    <div class="mt-6 px-4 py-3 flex justify-center sm:px-6">
      <%= f.submit('Next', { class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-app-pink hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-app-pink focus:ring-opacity-50 cursor-pointer w-full max-w-32', data: { disable_with: 'Wait...' } }) %>
    </div>
  <% end %>
</div>