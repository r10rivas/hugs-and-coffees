<div class="w-full h-full min-h-screen-without-navbar py-4">
  <%= link_to((request.referer.present? ? request.referer : root_path),
              class: 'flex text-gray-700') do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span>Back</span>
  <% end %>

  
  <%= form_with(model: [@user, @user.hugs.build]) do |f| %>
    <%= f.hidden_field :duration, value: params[:hug][:duration] %>
    <div class="w-full mt-6 max-w-xl lg:max-w-2xl mx-auto">
      <div class="p-4">
        <h3 class="font-bold">
          <%= "Sending a hug of #{params[:hug][:duration]} sec." %>
        </h3>
      </div>
      <div class="p-4 mt-3 bg-white">
        <h3>Your data</h3>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :name, 'Name', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_field :name, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Enter your name', required: true } %>
        </div>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :occupation, 'Occupation', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_field :occupation, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Enter your occupation', required: true } %>
        </div>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :messafe, 'Thank you message', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_area :message, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Enter your thank you message...', required: true, rows: 8 } %>
        </div>
      </div>

      <div class="px-4 py-3 flex justify-center sm:px-6">
        <%= f.submit('Send', { class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-app-pink hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-app-pink focus:ring-opacity-50 cursor-pointer w-full max-w-32', data: { disable_with: 'Wait...' } }) %>
      </div>
    </div>
  <% end %>
</div>
