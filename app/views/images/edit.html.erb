<div class='container mx-auto px-4 py-6'>
  <%= render( partial: 'shared/page_heading',
              locals: { title: 'Editar imagen' } ) %>

  <%= form_with(model: @image, local: true, id: 'edit-image') do |f| %>

    <div class='md:grid md:grid-cols-3 md:gap-6'>
      <div class='md:col-span-1'>
        <div class='px-4 sm:px-0'>
          <h3 class='text- font-medium leading-6 text-gray-900'>
            Imagen del carousel
          </h3>
          <p class="mt-1 text-sm text-gray-600">
            Aditar imagen que se mostrara en el carousel del perfil público
          </p>
        </div>
      </div>

      <div class='mt-5 md:mt-0 md:col-span-2'>
        <div class='shadow overflow-hidden sm:rounded-md'>
          <div class='px-4 py-5 bg-white sm:p-6'>
            <div class='grid grid-cols-6 gap-6'>
              <div class='col-span-6'>
              <%# rails_blob_url(f.object.file) %>
                <%= f.label :file, 'Imagen', { class: 'block text-sm font-medium text-gray-700' } %>
                <%= react_component("formImage/", { name: "image[file]",
                                                   imagesFile: [f.object.file.blob.signed_id] }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="hidden sm:block">
      <div class="py-5">
        <div class="border-t border-gray-200">
        </div>
      </div>
    </div>

    <div class="mt-10 sm:mt-0">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <div class="px-4 sm:px-0">
            <h3 class="text- font-medium leading-6 text-gray-900">
              Datos de la imagen
            </h3>
            <p class="mt-1 text-sm text-gray-600">
              Parametros de publicación y leyenda de la imagen a mostrarse en el carousel
            </p>
          </div>
        </div>

        <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6">
                  <%= f.label :caption, 'Subtítulo', { class: 'block text-sm font-medium text-gray-700' } %>
                  <%= f.text_field :caption, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Subtítulo', required: true } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="hidden sm:block">
      <div class="py-5">
        <div class="border-t border-gray-200">
        </div>
      </div>
    </div>

    <div class='px-4 py-3 bg-gray-50 text-right sm:px-6'>
      <%= f.submit('Actualizar', { class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-app-pink hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-app-pink focus:ring-opacity-50 cursor-pointer', data: { disable_with: 'Por favor espere...' } }) %>
    </div>
  <% end %>
</div>
