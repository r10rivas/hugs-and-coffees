<div class="p-4 sm:px-6 md:px-10 md:py-6 w-full h-full min-h-screen-without-navbar">
  <%= link_to((request.referer.present? ? request.referer : root_path),
              class: 'flex text-gray-700') do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span>Atras</span>
  <% end %>

  <%= form_with(model: [@user, @user.coffees.build]) do |f| %>
    <div class="w-full mt-8  max-w-xl mx-auto">
      <div class="p-4 bg-white">
        <h3 class="font-bold">¿Cuantos cafés?</h3>
        <%= react_component('coffeeMultiplier', coffee: 200, currency: '$') %>
      </div>


      <div class="p-4 mt-3 bg-white">
        <h3><%= "Datos de #{@user.profile.first_name}" %></h3>

        <%= react_component('bankAccounts', accounts: banks_used(@user)) %>
      </div>

      <div class="p-4 mt-3 bg-white">
        <h3>Tus datos</h3>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :name, 'Nombre', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_field :name, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Número de cuenta', required: true } %>
        </div>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :occupation, 'Ocupación', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_field :occupation, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Ocupación', required: true } %>
        </div>
        <div class="w-full mt-2 first:mt-0">
          <%= f.label :messafe, 'Mensaje de agradecimiento', { class: 'block text-sm font-medium text-gray-700' } %>
          <%= f.text_area :message, { class: 'mt-1 focus:ring-app-pink focus:border-app-pink block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', placeholder: 'Mensaje...', required: true, rows: 8 } %>
        </div>
      </div>

      <div class="px-4 py-3 flex justify-center sm:px-6">
        <%= f.submit('Enviar', { class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-app-pink hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-app-pink focus:ring-opacity-50 cursor-pointer w-full max-w-32', data: { disable_with: 'Por favor espere...' } }) %>
      </div>
    </div>
  <% end %>
</div>
