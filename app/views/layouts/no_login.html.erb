<!DOCTYPE html>
<html>
  <head>
    <title>HugsAndCoffees</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bg-gray-50 font-roboto">
      <%= render partial: 'shared/navbar_no_login', locals: {user: @user} %>
      <div class="mt-16 max-w-7xl mx-auto">
        <div class="grid grid-cols-12 gap-1 p-4">
          <main class="col-span-full">
            <%= yield %>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
