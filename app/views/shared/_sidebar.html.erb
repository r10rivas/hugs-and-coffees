<aside class="hidden lg:block lg:col-span-3">
  <div class="w-full flex flex-col justify-between sticky top-16 h-screen-without-navbar border-r border-gray-200">
    <ul>
      <li class="flex">
        <%= link_to(edit_user_profile_path(current_user), class: "p-4 w-full flex items-center hover:text-app-pink #{active_navigation?(edit_user_profile_path(current_user)) ? 'text-app-pink' : 'text-gray-500'}") do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="font-semibold">Profile</span>
        <% end %>
      </li>
      <li class="flex">
        <%= link_to(user_images_path(current_user), class: "p-4 w-full flex items-center hover:text-app-pink #{active_navigation?(user_images_path(current_user)) ? 'text-app-pink' : 'text-gray-500'}") do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold">Images</span>
        <% end %>
      </li>
      <li class="flex">
        <%= link_to(user_accounts_path(current_user), class: "p-4 w-full flex items-center hover:text-app-pink #{active_navigation?(user_accounts_path(current_user)) ? 'text-app-pink' : 'text-gray-500'}") do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold">Cuentas</span>
        <% end %>
      </li>
    </ul>

    <ul>
      <li>
        <%= link_to(destroy_user_session_path, { method: :delete, class: 'p-4 w-full flex items-center text-gray-500 hover:text-app-pink' }) do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          <span class="font-semibold">Cerrar session</span>
        <% end %>
      </li>
    </ul>
  </div>
</aside>