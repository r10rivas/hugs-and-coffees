<div class='mt-2 mb-6 md:flex md:items-center md:justify-between'>
  <div class='flex-1 min-w-0'>
    <h2 class='text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate'>
      <%= local_assigns[:title] %>
    </h2>
  </div>
  <% if local_assigns[:action_button] %>
    <div class='mt-4 flex-shrink-0 flex md:mt-0 md:ml-4'>
      <%= link_to( local_assigns[:action_button][:name],
                 local_assigns[:action_button][:path],
                 { class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-app-pink hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-app-pink focus:ring-opacity-50' }) %>
    </div>
  <% end %>
</div>
